<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sdau.activity.BookInfoActivity" >

    <LinearLayout
        android:id="@+id/ll_bookinfo_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_bookinfo_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/recommend" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bookinfo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_bookinfo_pic"
        android:background="@drawable/tv_bookname_shape"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="酩酊国"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_bookinfo_name"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/ll_bookinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_bookinfo_name"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="2dp" >

            <LinearLayout
                android:id="@+id/ll_bookinfo_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="作者："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="莫言"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookinfo_chuban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="出版："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_chuban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="1995/作家出版社"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookinfo_ISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="ISBN："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_ISBN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="I207.42/L353"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookinfo_CNY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="CNY："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_CNY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="36"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookinfo_pageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="页数："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_pageCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="418页"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bookinfo_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="概要："
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_bookinfo_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="这本书讲了这么一个故事。。。"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tl_bookinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp" >

<!--                 <TextView -->
<!--                     android:id="@+id/tv_booklocation_title" -->
<!--                     android:layout_width="fill_parent" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:paddingBottom="5dp" -->
<!--                     android:paddingLeft="10dp" -->
<!--                     android:paddingRight="15dp" -->
<!--                     android:paddingTop="5dp" -->
<!--                     android:text="馆藏：" -->
<!--                     android:textColor="@android:color/darker_gray" -->
<!--                     android:textSize="14sp" -->
<!--                     android:textStyle="bold" -->
<!--                     android:typeface="sans" /> -->
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>